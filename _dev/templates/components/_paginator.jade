//- Page and post paginator
mixin paginator()
	| {% if page.type == 'page' %}
	| {% if paginator.total_pages > 1 %}
	+b('nav').pager
		+e('ul').list
			| {% if paginator.previous_page %}
			+e('li').item_next
				+e.link(href="{{ site.baseurl | append: paginator.previous_page_path | replace: '//', '/' }}") {{site.data.locales.paginator.page_next}}
			| {% endif %}

			| {% if paginator.next_page %}
			+e('li').item_previous
				+e.link(href="{{ site.baseurl | append: paginator.next_page_path | replace: '//', '/' }}") {{site.data.locales.paginator.page_prev}}
			| {% endif %}
	| {% endif %}
	| {% endif %}

	| {% if page.type == 'taxonomy' %}
	| {% if paginator.total_pages > 1 %}
	+b('nav').pager
		+e('ul').list
			| {% if paginator.previous_page %}
			| {% if paginator.previous_page == 1 %}
			+e('li').item_next
				+e.link(href="{{ site.baseurl | append: page.base | replace: '//', '/' }}") {{site.data.locales.paginator.page_next}}
			| {% else %}
			+e('li').item_next
				+e.link(href="{{  site.baseurl | append: page.base | append: page.slug | append: paginator.previous_page | replace: '//', '/' }}") {{site.data.locales.paginator.page_next}}
			| {% endif %}
			| {% endif %}

			| {% if paginator.next_page %}
			| {% if paginator.next_page == 1 %}
			+e('li').item_previous
				+e.link(href="{{ site.baseurl | append: page.base | replace: '//', '/' }}") {{site.data.locales.paginator.page_prev}}
			| {% else %}
			+e('li').item_previous
				+e.link(href="{{ site.baseurl | append: page.base | append: page.slug | append: paginator.next_page | replace: '//', '/' }}") {{site.data.locales.paginator.page_prev}}
			| {% endif %}
			| {% endif %}
	| {% endif %}
	| {% endif %}

	| {% if page.type == 'post' %}
	+b('nav').pager
		+e('ul').list
			| {% if page.previous.url %}
			+e('li').item_previous
				+e.link(href="{{ site.baseurl | append: page.previous.url | replace: '//', '/'}}", title='{{page.previous.title}}') {{site.data.locales.paginator.post_prev}}
			| {% endif %}

			| {% if page.next.url %}
			+e('li').item_next
				+e.link(href="{{ site.baseurl | append: page.next.url | replace: '//', '/'}}", title='{{page.next.title}}') {{site.data.locales.paginator.post_next}}
			| {% endif %}
	| {% endif %}
