| {% for post in paginator.posts %}
// Post preview item
article.post-preview
	img.post-preview__image.js-lazy(src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7", data-src="{{ site.baseurl }}/{{ post.thumb_img }}", alt="{{ post.title }}")
	a.post-preview__link(href='{{ post.url | prepend: site.baseurl }}')
		h3.post-preview__title
			| {{ post.title }}
		| {% if post.description %}
		h4.post-preview__subtitle
			| {{ post.description }}
		| {% endif %}

	// Meta information: authorship, publication date, tags, category
	div.post-preview__meta
		p.post-preview__meta-autorship

			// Check if post is translation and if so - use extended autorsip info
			| {% if post.translator %}
			| Author:&nbsp;
			span.post-preview__meta-author {{ post.author }}
			| , translator:&nbsp;
			span.post-preview__meta-translator {{ post.translator }}
			br
			| Source:&nbsp;
			a.post-preview__meta-source(href="{{ post.source-link }}") {{ post.source }}

			// Else use short autorsip info
			| {% else %}
			| Author:&nbsp;
			span.post-preview__meta-author {% if post.author %}{{ post.author }}{% else %}{{ site.author }}{% endif %}
			| {% endif %}

			// Publication date
			| , published:&nbsp;
			time.post-preview__meta-date(datetime="{{ post.date | date: '%Y-%m-%d' }}") {{ post.date | date: "%B %-d, %Y" }}

		// Checking for post tags and show them
		| {% if post.tags %}
		p.post-preview__meta-tags
			| Tags:&nbsp;
			| {% for tag in post.tags %}
			a.post-preview__meta-tag(href="{{ site.tags.url | prepend: site.baseurl }}{{ tag | replace:' ','-' }}/") {{ tag }}
			| {% unless forloop.last %}, {% endunless %}
			| {% endfor %}
		| {% endif %}

		// Checking for post category and show it
		| {% if post.category %}
		p.post-preview__meta-category
			| Category:&nbsp;
			| {% for cat in post.category %}
			a.post-preview__meta-cat(href="{{ site.categories.url | prepend: site.baseurl }}{{ cat | replace:' ','-' }}/") {{ cat }}
			| {% unless forloop.last %}, {% endunless %}
			| {% endfor %}
		| {% endif %}
hr.post-divider
| {% endfor %}
