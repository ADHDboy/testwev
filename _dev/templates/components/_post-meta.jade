//- Meta information: authorship, publication date, tags, category
mixin post-meta()
	| {% if page.type == 'page' or page.type == 'taxonomy' %}
	+b.post-meta_preview
		+e('p').autorship_preview

			//- Check if post is translation and if so - use extended autorsip info
			| {% if post.translator %}
			| Author:&nbsp;
			+e.author_preview {{ post.author }}
			| , translator:&nbsp;
			+e.translator_preview {{ post.translator }}
			br
			| Source:&nbsp;
			+e.source_preview(href="{{ post.source-link }}") {{ post.source }}

			//- Else use short autorsip info
			| {% else %}
			| Author:&nbsp;
			+e.author_preview {% if post.author %}{{ post.author }}{% else %}{{ site.author }}{% endif %}
			| {% endif %}

			//- Publication date
			| , published:&nbsp;
			+e('time').date_preview(datetime="{{ post.date | date: '%Y-%m-%d' }}") {{ post.date | date: "%B %-d, %Y" }}

		//- Checking for post tags and show them
		| {% if post.tags %}
		+e('p').tags_preview
			| Tags:&nbsp;
			| {% for tag in post.tags %}
			+e.tag_preview(href="{{ site.tags.url | prepend: site.baseurl }}{{ tag | replace:' ','-' }}/") {{ tag }}
			| {% unless forloop.last %}, {% endunless %}
			| {% endfor %}
		| {% endif %}

		//- Checking for post category and show it
		| {% if post.category %}
		+e('p').categories_preview
			| Category:&nbsp;
			| {% for cat in post.category %}
			+e.category_preview(href="{{ site.categories.url | prepend: site.baseurl }}{{ cat | replace:' ','-' }}/") {{ cat }}
			| {% unless forloop.last %}, {% endunless %}
			| {% endfor %}
		| {% endif %}
	| {% elsif page.type == 'post' %}
	+b.post-meta
		+e('p').autorship

			//- Check if post is translation and if so - use extended autorsip info
			| {% if page.translator %}
			| Author:&nbsp;
			+e.author {{ page.author }}
			| , translator:&nbsp;
			+e.translator {{ page.translator }}
			br
			| Source:&nbsp;
			+e.source(href="{{ page.source-link }}") {{ page.source }}

			//- Else use short autorsip info
			| {% else %}
			| Author:&nbsp;
			+e.author {% if page.author %}{{ page.author }}{% else %}{{ site.author }}{% endif %}
			| {% endif %}

			//- Publication date
			| , published:&nbsp;
			+e('time').date(datetime="{{ page.date | date: '%Y-%m-%d' }}") {{ page.date | date: "%B %-d, %Y" }}

		//- Checking for post tags and show them
		| {% if page.tags %}
		+e('p').tags
			| Tags:&nbsp;
			| {% for tag in page.tags %}
			+e.tag(href="{{ site.tags.url | prepend: site.baseurl }}{{ tag | replace:' ','-' }}/") {{ tag }}
			| {% unless forloop.last %}, {% endunless %}
			| {% endfor %}
		| {% endif %}

		//- Checking for post category and show it
		| {% if page.category %}
		+e('p').categories
			| Category:&nbsp;
			| {% for cat in page.category %}
			+e.category(href="{{ site.categories.url | prepend: site.baseurl }}{{ cat | replace:' ','-' }}/") {{ cat }}
			| {% unless forloop.last %}, {% endunless %}
			| {% endfor %}
		| {% endif %}
	hr.divider
	| {% endif %}
